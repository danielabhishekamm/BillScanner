<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chhaya_pc.billscanner.MainActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:background="#ffdddd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#fff"
        android:id="@+id/monthly_layout">

      <TextView
          android:id="@+id/monthly_header"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="15dp"
          android:text="Expenses this month: "
          android:textSize="25dp"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="\u20B9 4899"
          android:textColor="#37be40"
          android:layout_marginTop="15dp"
          android:layout_centerHorizontal="true"
          android:textSize="30dp"
          android:layout_below="@id/monthly_header"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/monthly_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="#fff"
        android:id="@+id/last_bill_layout">

      <TextView
          android:id="@+id/last_bill"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="15dp"
          android:layout_marginTop="20dp"
          android:text="Last Bill: "
          android:textSize="25dp" />

      <TextView
          android:id="@+id/last_bill_value"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/last_bill"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="15dp"
          android:text="\u20B9 0"
          android:textColor="#37be40"
          android:textSize="30dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/last_bill_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#fff">

      <TextView
          android:id="@+id/setMax"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentTop="true"
          android:layout_marginTop="20dp"
          android:layout_marginStart="15dp"
          android:text="Maximum limit per month: "
          android:textSize="25dp" />

      <TextView

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/setMax"
          android:layout_centerHorizontal="true"
          android:text="\u20B9 0.00"
          android:textColor="#37be40"
          android:textSize="30dp"
          android:id="@+id/maxMonthValue" />


      <TextView
          android:id="@+id/setMaxTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/maxMonthValue"
          android:layout_marginStart="25dp"
          android:text="Set Max. limit per month"
          android:textStyle="italic"
          android:textColor="#6384f2"/>

      <EditText
          android:id="@+id/setMaxEditText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignStart="@+id/setMaxTextView"
          android:layout_below="@+id/setMaxTextView"
          android:hint="Enter limit in INR"
          android:visibility="gone"
          android:inputType="numberDecimal"/>

      <Button
          android:id="@+id/setMaxSubmit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/setMaxEditText"
          android:layout_marginStart="11dp"
          android:layout_toEndOf="@+id/setMaxTextView"
          android:background="#6384f2"
          android:text="OK"
          android:visibility="gone"/>
    </RelativeLayout>


    <Button
        android:id="@+id/cam_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#6384f2"
        android:text="Scan new Bill"
        android:textColor="#ffffff" />
  </RelativeLayout>
</RelativeLayout>
